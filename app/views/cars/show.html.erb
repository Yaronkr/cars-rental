          <!-- checkout -->
          <div>
            <b>
         <span style="position:relative;top:-18px; font-weight:bold;">$</span>
          <span style="font-size:36px; color: #F55353"><%= @car.price_day %></span>
        </b>
        / Day
            <hr>
            <p style="font-size: 12px">pick up: </p>
            <h6><%= @car.address %></h6>
            <hr>
            <!-- make this a full length button -->
            <div style="margin-right: 15px">
              <% if user_signed_in?  %>
              <%= link_to "BOOK NOW", new_car_booking_path(@car), class: "btn button-primary w-100" %>
              <% end %>
            </div>

            </div>
        </div>
      </div>
