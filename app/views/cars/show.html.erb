        <div class="col-md-8" style="width: 700px">
          <h2> <%= @car.make %> - <%= @car.model %></h2>

          <!-- car image -->
          <div>
            <%= cl_image_tag(@car.photo.key, width: 500) if @car.photo.attached? %>
          </div>

          <div class="car-profile-description" style="border: solid 1px #c6c6c6;
        width: 618px;
        padding:15px;
        margin-top:15px;
        font-size:12px">
          <%= @car.description %>
          </div>
          <div class="car-profile-info" style="border:solid 1px #c6c6c6;padding: 25px 15px 15px 15px;margin-top:15px;width:618px;overflow:auto; font-size:14px">

