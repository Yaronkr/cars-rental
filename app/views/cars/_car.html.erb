
<div class="card-product">
  <div class="card-product-infos d-flex justify-content-between">
    <%= cl_image_tag(car.photo.key, width: 300) if car.photo.attached? %>
    <div class="car-card mx-3">
      <%= link_to "#{car.make}, #{car.model}", car_path(car), class: "link-dark" %>
      <p>$<%= car.price_day %></p>
      <%= link_to('Edit', edit_car_path(car), class:'btn btn-info btn-sm') if policy(car).update? %>
      <%= link_to('Delete', car_path(car), method: :delete, class:'btn btn-danger btn-sm') if policy(car).destroy? %>
      <%= link_to("Book A Car", new_car_booking_path(car), class: "book-car-btn") unless car.user = current_user%>
    </div>
  </div>
</div>
