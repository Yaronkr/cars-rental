
<div class="container index-container my-2">
  <h1>Browse Our Cars</h1>
  <p>You are only one step away to rent a car</p>


  <div class="map" style="width: 50%; height: 300px;"
  data-controller="mapbox"
  data-mapbox-markers-value="<%= @markers.to_json %>"
  data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>

  <% @cars.each do |car| %>
    <%= render 'shared/carCard', car: car %>
  <% end %>
</div>
